  SOGoUserSources = (
<% @user_sources.each do |user_source| -%>
    {
<% { type: 'type', CNFieldName: 'cn_field_name', UIDFieldName: 'uid_field_name', IDFieldName: 'id_field_name', bindFields: 'bind_fields', baseDN: 'base_dn', bindDN: 'bind_dn', bindPassword: 'bind_password', canAuthenticate: 'can_authenticate', displayName: 'display_name', hostname: 'hostname', id: 'id', isAddressBook: 'is_address_book', userPasswordAlgorithm: 'user_password_algorithm' }.each do |sogo_key, key| -%>
  <%-
     value = user_source[key]
     case value
     when Array
       value = "(#{value.join(', ')})"
     when String
       value = %("#{value}") if value =~ /[ ,;]/
     when true
       value = 'YES'
     when false
       value = 'NO'
     end
  -%>
  <%- unless value.nil? -%>
      <%= sogo_key %> = <%= value %>;
  <%- end -%>
<% end -%>
    }
<% end -%>
